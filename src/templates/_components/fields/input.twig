{% import "_includes/forms" as forms %}

<div class="podcast-embedder-container">

    <div class="podcast-embedder-urlContainer flex">
        <div class="texticon search icon clearable flex-grow">
            {{ forms.text({
                id: name,
                name: name,
                type: 'url',
                placeholder: 'Only Podbean and Libsyn supported.',
                value: value ? value,
                class: 'podcast-embedder-url'
            }) }}
        </div>
    </div>

    <div class="podcast-embedder-previewContainer">
        {% include 'podcast-embedder/_components/fields/inputEmbed.twig' with {
            name: name,
            value: value
        } only %}
    </div>

</div>